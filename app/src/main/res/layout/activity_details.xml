<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/other_view"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:textAppearance="@style/AlertDialog.AppCompat.Light"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:id="@+id/txtMessageHeader"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Short Message Service"
        android:layout_weight="0.07"
        android:textAlignment="center" />

    <EditText android:enabled="false"
        android:textAppearance="@style/AlertDialog.AppCompat.Light"
        android:textColorHint="#ffffff"
        android:id="@+id/txtFaultVinNumber"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:hint="@string/phonenumber" android:ems="10"
        android:layout_below="@+id/txtMessageHeader"
        android:layout_alignParentLeft="true"
        android:inputType="text"/>

    <EditText android:enabled="false"
        android:textAppearance="@style/AlertDialog.AppCompat.Light"
        android:textColorHint="#ffffff"
        android:id="@+id/txtMessage"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:hint="@string/message"
        android:ems="10"
        android:layout_below="@+id/txtFaultVinNumber"
        android:layout_alignParentLeft="true"
        android:inputType="textMultiLine" />

    <Button android:id="@+id/btnSendMessage"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Send"
        android:layout_below="@+id/txtMessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Cancel"
        android:layout_below="@+id/btnSendMessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
