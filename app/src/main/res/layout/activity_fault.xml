<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/other_view"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1.0">

    <TextView android:textAppearance="@style/Widget.AppCompat.Button"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Recording Fault"
        android:layout_weight="0.07"
        android:textAlignment="center" />

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1.0"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <EditText android:enabled="true"
            android:id="@+id/txtFaultRegistrationNumber"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:hint="Registration Number"
            android:ems="10"
            android:layout_below="@+id/txtMessageHeader"
            android:layout_alignParentLeft="true"
            android:inputType="text" />

        <EditText android:enabled="true"
            android:id="@+id/txtFaultMake"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:hint="Make"
            android:ems="10"
            android:layout_below="@+id/txtMessageHeader"
            android:layout_alignParentLeft="true"
            android:inputType="text" />

        <EditText android:enabled="true"
            android:id="@+id/txtFaultModel"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:hint="Model"
            android:ems="10"
            android:layout_below="@+id/txtMessageHeader"
            android:layout_alignParentLeft="true"
            android:inputType="text" />

        <EditText android:enabled="true"
            android:id="@+id/txtFaultYear"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:hint="Year"
            android:ems="10"
            android:layout_below="@+id/txtFaultYear"
            android:layout_alignParentLeft="true"
            android:inputType="text" />

        <EditText android:enabled="true"
            android:id="@+id/txtFaultMileage"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:hint="Mileage"
            android:ems="10"
            android:layout_below="@+id/txtMessageHeader"
            android:layout_alignParentLeft="true"
            android:inputType="text" />

        <EditText android:enabled="true"
            android:id="@+id/txtFaultVinNumber"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:hint="Vin Number"
            android:ems="10"
            android:layout_below="@+id/txtfaultVinNumber"
            android:layout_alignParentLeft="true"
            android:inputType="text" />

        <ImageView android:id="@+id/faultPanelImage"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="0x1080037"
            android:src="0x1080037"
            android:scaleType="fitCenter"
            android:adjustViewBounds="false"
            android:layout_weight="0.88"
            android:foregroundGravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill" />
    </LinearLayout>
</RelativeLayout>
